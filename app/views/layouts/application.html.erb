<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
        <h1>99 Cats!</h1>
        <ul>
          <% if current_user %>
          <li><%= current_user.username %></li>
          <li><%= link_to "Logout", logout_url, method: "delete" %></li>
          <% else %>
          <li><%= link_to "Login", login_url %></li>
          <li><%= link_to "Sign up", signup_url %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <main>
      <% flash.each do |type, msg| %>
        <div><%= "#{msg}" %></div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
