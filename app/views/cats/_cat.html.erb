<table>
  <thead>
    <tr>
      <th><%= @cat.name %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Age:</td>
      <td><%= @cat.age %></td>
    </tr>
    <tr>
      <td>Sex:</td>
      <td><%= @cat.sex.upcase %></td>
    </tr>
    <tr>
      <td>Color:</td>
      <td><%= @cat.color %></td>
    </tr>
    <tr>
      <td>Description:</td>
      <td><%= @cat.description %></td>
    </tr>
    <tr>
      <td>Existing Rental Requests</td>
      <td>
        <ol>
          <% CatRentalRequest.where(cat_id: @cat.id)
                            .order(:start_date)
                            .each do |rental_request| %>
            <li><%= rental_request.start_date %> - <%= rental_request.end_date %> (<%= rental_request.status %>)</li>
          <% end %>
        </ol>
      </td>
    </tr>
  </tbody>
</table>
